---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="card bg-red-100" data-card>
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</div>

<style>
	.card {
		@apply p-4 border border-[3px] border-gray-300 rounded-xl
	}

</style>
