import forward  from "../../public/images/forward.gif"
import Curriculum, {simpleSchema as curriculumSchema} from '../interfaces/curriculum'



const query = {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
      {
        curricula {
            ${curriculumSchema()}
        }
     }`,
  }),
};

const response = await fetch(import.meta.env.ASTRO_APP_HYGRAPH_ENDPOINT, query);
const json = await response.json();
const curricula: Curriculum[] = json.data.curricula ;

