---
import { ViewTransitions } from 'astro:transitions';
import Header from "../components/layouts/Header.astro";
import Footer from "../components/layouts/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
        <div class="wrapper min-h-screen h-screen flex flex-col">
            <Header page={currentPath} />
            <main class="boxed flex-1 relative">
                <slot />

            </main>
            <Footer />
        </div>
        
	</body>
</html>

<style is:global>
    .boxed {
       @apply container mx-auto border border-solid border-black
    }

    .header--type-project {
        @apply z-50 md:fixed flex flex-col md:flex-row items-center justify-center h-auto md:h-0 top-0 md:top-1/2 translate-y-0 md:-translate-y-1/2
    }

    .header--type-project > nav {
        @apply w-full
    }


</style>
