---
import { ViewTransitions } from 'astro:transitions';
import HeaderComponent from "@components/layouts/HeaderComponent.astro";
import FooterComponent from "@components/layouts/FooterComponent.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
        <div class="wrapper min-h-screen h-screen flex flex-col">
            <HeaderComponent page={currentPath} />
            <main class="boxed flex-1 relative">
                <slot />

            </main>
            <FooterComponent />
        </div>
        
	</body>
</html>

<style is:global>
    .boxed {
       @apply container mx-auto border border-solid border-black
    }

</style>
